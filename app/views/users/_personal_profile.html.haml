.well.well-sm
  .row
    .col-sm-6.col-md-4
      %img.img-rounded.img-responsive{:alt => "", :src => "http://bootdey.com/img/Content/user_1.jpg"}/
    .col-sm-6.col-md-8
      %h4= @user.name
      %p
        %i.fa.fa-envelope
        = @user.email
      %p
        %i.fa.fa-tag
          = @user.height_meters
        m
        |
        %i.fa.fa-balance-scale
          = @user.weight_kilograms
          kg
      .btn-group
        // maybe refactor into a view helper if complexity grows
        %button.btn.btn-primary{:type => "button", class: ('disabled' if @user.private_profile?).to_s}
          %i.fa.fa-globe
          = @user.private_profile? ? 'Profile is private' : "Public Page"
      .pull-right
        =link_to 'edit', edit_user_path(@user), remote: true